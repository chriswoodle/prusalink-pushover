{
    "compilerOptions": {
        "composite": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": false,
        "lib": [
            "ES2020",
            "DOM"
        ],
        "types": [
            "node"
        ],
        "outDir": "./dist",
        "rootDir": "./src"
    }
}